{
  "name": "SoundMap - Audio Social Map",
  "short_name": "SoundMap",
  "description": "Audio-only social sound map for Berlin. Headphones on, walk, discover.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#2d2a26",
  "theme_color": "#2d2a26",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["social", "music", "entertainment", "travel"],
  "display_override": ["window-controls-overlay", "standalone"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "screenshots": [
    {
      "src": "/screenshot-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "SoundMap main interface"
    },
    {
      "src": "/screenshot-narrow.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "SoundMap mobile view"
    }
  ],
  "icons": [
    {
      "src": "placeholder-logo.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "placeholder-logo.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "shortcuts": [
    {
      "name": "Start Walking",
      "short_name": "Walk",
      "description": "Begin your audio journey",
      "url": "/walk",
      "icons": [{ "src": "/placeholder-logo.png", "sizes": "96x96" }]
    },
    {
      "name": "Record Clip",
      "short_name": "Record",
      "description": "Record a new audio clip",
      "url": "/record",
      "icons": [{ "src": "/placeholder-logo.png", "sizes": "96x96" }]
    },
    {
      "name": "View Map",
      "short_name": "Map",
      "description": "Explore the Berlin soundmap",
      "url": "/map",
      "icons": [{ "src": "/placeholder-logo.png", "sizes": "96x96" }]
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "protocol_handlers": [
    {
      "protocol": "web+soundmap",
      "url": "/clip/%s"
    }
  ]
}
